{
  "name": "tourist-safety-backend",
  "version": "1.0.0",
  "description": "Smart Tourist Safety Monitoring & Incident Response System - Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js", 
    "test": "node test-api.js",
    "production": "NODE_ENV=production node server.js",
    "seed": "node seed-database.js",
    "setup": "npm install && node seed-database.js",
    "full-start": "npm run seed && npm run dev",
    "quick-start": "node seed-database.js && node server.js",
    "test-all": "npm run seed && timeout 3 && npm run test",
    "deploy": "npm run setup && npm run production",
    "go": "node start-system.js",
    "launch": "node start-system.js"
  },
  "keywords": [
    "tourist-safety",
    "emergency-response",
    "api",
    "mongodb",
    "express",
    "jwt-authentication"
  ],
  "author": "Tourist Safety System",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
